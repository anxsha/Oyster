@page "/Profile/DeletePersonalData"
@model DeletePersonalDataModel
@{
    ViewData["Title"] = "Delete account data";
    ViewData["ActivePage"] = ManageNavPages.PersonalData;
}

<div class="bg-primary flex flex-col self-center max-w-lg rounded-xl shadow-xl p-4 mb-6 mt-6 w-full md:w-3/4">

    <p class="text-white">
        <strong>Deleting this data will permanently remove your account, and this cannot be recovered.</strong>
    </p>
    <form id="delete-user" method="post" class="flex flex-col pt-4">
        <div asp-validation-summary="All" class="text-sm text-red-400"></div>
        @if (Model.RequirePassword)
        {
            <div class="">
                <label asp-for="Input.Password"></label>
                <input asp-for="Input.Password" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 mt-1 leading-tight focus:outline-none focus:shadow-outline" />
                <span asp-validation-for="Input.Password" class="mt-2 text-sm text-red-400"></span>
            </div>
        }
        <button class="text-white bg-danger/80 hover:bg-danger focus:ring-4 focus:ring-danger w-fit self-center rounded-lg text-sm p-2.5 mt-4 text-center" type="submit">Delete data and close my account</button>
    </form>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}