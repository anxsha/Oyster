@page "/Profile/Password"
@model ChangePasswordModel
@{
    ViewData["Title"] = "Change password";
    ViewData["ActivePage"] = ManageNavPages.ChangePassword;
}

<partial name="_StatusMessage" for="StatusMessage"/>
<div class="bg-primary self-center max-w-lg rounded-xl shadow-xl p-2 mb-6 mt-6 w-full md:w-3/4">
    <form class="flex flex-col pt-3" id="change-password-form" method="post">
        <div asp-validation-summary="All" class="mt-2 text-sm text-red-400"></div>
        <div class="flex flex-col pt-4">
            <label asp-for="Input.OldPassword" class=""></label>
            <input asp-for="Input.OldPassword" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 mt-1 leading-tight focus:outline-none focus:shadow-outline"/>
            <span asp-validation-for="Input.OldPassword" class="mt-2 text-sm text-red-400"></span>
        </div>
        <div class="flex flex-col pt-4">
            <label asp-for="Input.NewPassword" class=""></label>
            <input asp-for="Input.NewPassword" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 mt-1 leading-tight focus:outline-none focus:shadow-outline"/>
            <span asp-validation-for="Input.NewPassword" class="mt-2 text-sm text-red-400"></span>
        </div>
        <div class="flex flex-col pt-4">
            <label asp-for="Input.ConfirmPassword" class=""></label>
            <input asp-for="Input.ConfirmPassword" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 mt-1 leading-tight focus:outline-none focus:shadow-outline"/>
            <span asp-validation-for="Input.ConfirmPassword" class="mt-2 text-sm text-red-400"></span>
        </div>
        <button type="submit" class="text-white bg-info hover:bg-darkshades focus:ring-4 focus:ring-darkshades w-fit self-center rounded-lg text-sm p-2.5 mt-2 text-center">Update password</button>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial"/>
}